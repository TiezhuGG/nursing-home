<view class="heart-rate"><view class="top"><view data-event-opts="{{[['tap',[['toChoice']]]]}}" class="patient_infos" bindtap="__e"><image class="avatar _img" src="{{patient.avatar}}"></image><block wx:if="{{patient}}"><view class="info"><text class="name">{{patient.name}}</text><view class="other"><text class="age">{{"年龄: "+patient.age}}</text><text class="gender">{{"性别: "+(patient.gender===1?'男':'女')}}</text></view></view></block><block wx:if="{{!patient}}"><view class="no-info">请选择患者</view></block><view><image class="more _img" src="../../static/images/more.png"></image></view></view><view class="date-module"><view class="date"></view></view><view class="qiun-columns"><view hidden="{{!(showCharts)}}" class="qiun-charts"><canvas class="charts" canvas-id="myChart" id="myChart" data-event-opts="{{[['touchstart',[['touchLineA',['$event']]]]]}}" bindtouchstart="__e"></canvas></view></view></view><view class="middle"><view class="beat"><view class="beat-item"><text class="txt">最高(BPM)</text><text class="val">{{highest_bpm===0?'':highest_bpm}}</text></view><view class="beat-item"><text class="txt">平均(BPM)</text><text class="val">{{avg_bpm===0?'':avg_bpm}}</text></view><view class="beat-item"><text class="txt">最低(BPM)</text><text class="val">{{lowest_bpm===0?'':lowest_bpm}}</text></view></view></view><view class="bottom"></view></view>