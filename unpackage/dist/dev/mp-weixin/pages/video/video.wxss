.video {
  width: 100%;
  font-size: 28rpx;
}
.top {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.search {
  width: 690rpx;
  margin: 0 auto;
  height: 64rpx;
  background-color: #f4f4f4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-radius: 2rpx;
}
.search image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
  margin-right: 16rpx;
}
input::-webkit-input-placeholder {
  /* WebKit browsers */
  color: #B4B4B4;
}
input:-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  color: #B4B4B4;
}
input::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  color: #B4B4B4;
}
input:-ms-input-placeholder {
  /* Internet Explorer 10+ */
  color: #B4B4B4;
}
.space {
  width: 100%;
  height: 20rpx;
  background-color: #F7F7F7;
}
.content {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
}
.view-box {
  width: 336rpx;
  float: left;
  margin-top: 40rpx;
}
.view-box:nth-child(2n) {
  float: right;
}
image {
  width: 100%;
  height: 188rpx;
}
.video-name {
  margin-top: 24rpx;
