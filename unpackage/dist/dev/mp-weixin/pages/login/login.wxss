.login {
  width: 750rpx;
  height: 680rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.login .txt {
    margin-top: 40rpx;
    margin-left: 40rpx;
    font-size: 44rpx;
    color: #333;
    line-height: 44rpx;
}
.login .input .account {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.login .input .account .account-input {
      position: relative;
      width: 670rpx;
      margin-left: 40rpx;
      padding-bottom: 40rpx;
      font-size: 32rpx;
      color: #333;
      border-bottom: 1rpx solid #E6E6E6;
}
.login .input .account .account-placeholder {
      font-size: 30rpx;
      color: #B4B4B4;
}
.login .input .account .off {
      position: absolute;
      margin-top: 10rpx;
      right: 40rpx;
      width: 34rpx;
      height: 34rpx;
      z-index: 10;
}
.login .input .password {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.login .input .password .password-input {
      position: relative;
      width: 670rpx;
      margin-top: 62rpx;
      margin-left: 40rpx;
      padding-bottom: 40rpx;
      font-size: 32rpx;
      color: #333;
      border-bottom: 1rpx solid #E6E6E6;
}
.login .input .password .password-placeholder {
      font-size: 30rpx;
      color: #B4B4B4;
}
.login .input .password .change-status {
      position: absolute;
      margin-top: 72rpx;
      right: 40rpx;
      width: 34rpx;
      height: 34rpx;
      z-index: 10;
}
.login .btn {
    width: 670rpx;
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
    margin-left: 40rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    font-size: 32rpx;
    color: #fff;
    background: #24C789;
    border-radius: 6px;
}

